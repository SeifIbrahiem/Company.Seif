
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>

<br /> 
<br />

<a asp-action="create" asp-controller="Department" class="btn btn-primary">Create Department</a>

<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
      <thead>
      <tr>
                <th>Code  </th>
                <th>Name</th>
                <th>Date of creation</th>
                <th>Detailes</th>
                <th>Update</th>
                <th> Delete  </th>
      </tr>
      </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.CreateAt</td>
                <td>
                    <a asp-action="Detailes" class="btn btn-warning">Detailes</a>
                </td>
                <td>
                    <a asp-action="Update" class="btn btn-success">Update</a>
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }

    </table>

}
else
{
    <div class="mt-4 alert alert-info">
     <h4>
     There are no Department:(
     </h4>

    </div>
}
